@model List<TeacherViewModel>

@{
    ViewData["Title"] = "Teachers";
}

<div class="container-fluid">
    <h2>Teachers</h2>
    <p>All Teachers:</p>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Groups</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].Teacher.UserId </td>
                    <td>@Model[i].Teacher.FirstName </td>
                    <td>@Model[i].Teacher.MiddleName </td>
                    <td>@Model[i].Teacher.LastName </td>
                    @if (Model[i].Teacher.Groups.Count > 0)
                    {
                        <td>@Model[i].Teacher.Groups.Count </td>
                    }
                    else
                    {
                        <td>@Model[i].Teacher.Groups.Count </td>
                    }
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model[i].Teacher.UserId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model[i].Teacher.UserId" class="btn btn-primary">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@model List<User>

@{
    ViewData["Title"] = "Teachers";
}

<div class="container-fluid">
    <h2>Teachers</h2>
    <p>All Teachers:</p>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Middle Name</th>
                <th>Last Name</th>
                <th>Groups</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>

            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@Model[i].UserId </td>
                    <td>@Model[i].FirstName </td>
                    <td>@Model[i].MidName </td>
                    <td>@Model[i].LastName </td>
                    <td>
                        @foreach (var group in Model[i].Groups)
                        {
                            @group.Group.Name <br />
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model[i].UserId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model[i].UserId" class="btn btn-outline-danger">Delete</a>
                        <a asp-action="Details" asp-route-id="@Model[i].UserId" class="btn btn-outline-info">Details</a>
                    </td>
                </tr>
            }

            <a asp-action="Create" class="btn btn-secondary">Create</a>
        </tbody>
    </table>
</div>
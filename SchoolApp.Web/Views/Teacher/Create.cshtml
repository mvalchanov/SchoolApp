@model CreateTeacherViewModel

@{
    ViewData["Title"] = "Create new Teacher";
}

<div class="col-3">
    <form asp-action="Create" asp-controller="Teacher" method="post">
        <div class="form-group ">
            <label asp-for="Teacher.FirstName"></label>
            <input asp-for="Teacher.FirstName" class="form-control" type="text" />
        </div>
        <div class="form-group ">
            <label asp-for="Teacher.MidName"></label>
            <input asp-for="Teacher.MidName" class="form-control" type="text" />
        </div>
        <div class="form-group ">
            <label asp-for="Teacher.LastName"></label>
            <input asp-for="Teacher.LastName" class="form-control" type="text" />
        </div>
        <div class="form-group">
            @foreach (var course in Model.Courses)
            {
                <input type="checkbox" 
                       name="selectedCourses" 
                       value="@course.CourseID" />

                       @course.Name
                <br />
            }
        </div>
        <button class="btn btn-primary" type="submit">Create</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </form>
</div>

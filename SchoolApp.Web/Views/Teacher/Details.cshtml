@model User
@{
    ViewData["Title"] = $"{Model.FullName}Details";
}

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Groups</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.UserId</td>
            <td>@Model.FirstName</td>
            <td>@Model.MidName</td>
            <td>@Model.LastName</td>
            <td>
                @foreach (var group in Model.Groups)
                {
                    @group.Group.Name <br />
                }
            </td>
        </tr>
    </tbody>
</table>

@model StudentViewModel
@{
    ViewData["Title"] = $"{Model.FullName} Details";
}

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Courses</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>@Model.ID</td>
            <td>@Model.FirstName</td>
            <td>@Model.MidName</td>
            <td>@Model.LastName</td>
            <td>
                @foreach (var course in Model.Courses)
                {
                    @course.Course.Name <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
                <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-outline-danger">Delete</a>
                <a asp-action="Index" asp-route-id="@Model.ID" class="btn btn-outline-info">Back</a>
            </td>
        </tr>
    </tbody>
</table>

@foreach (var course in Model.Courses)
{
    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
        <div class="card-header">Group:</div>
        <div class="card-body">
            <h4 class="card-title">@course.Course.Name</h4>
            <p class="card-text">Students in group: @course.Course.Students.Count()</p>
        </div>
    </div>
}

